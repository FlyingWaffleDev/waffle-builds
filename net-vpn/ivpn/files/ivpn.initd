name="IVPN-Service Daemon"
pidfile="${RC_PREFIX}/run/ivpn.pid"

command="/usr/bin/ivpn-service"
command_user="root:root"

reload() {
	ebegin "Reloading ${RC_SVCNAME}"
	start-stop-daemon --signal HUP --pidfile "${pidfile}"
	eend $?
}
